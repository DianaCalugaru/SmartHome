<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Activity.MainActivity10">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Sensor Status"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/temperaturaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatura: "
        android:textSize="18sp"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/umiditateaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Umiditatea: "
        android:textSize="18sp"
        android:layout_below="@+id/temperaturaTextView"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/ledTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Led: "
        android:textSize="18sp"
        android:layout_below="@+id/umiditateaTextView"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/usaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usa: "
        android:textSize="18sp"
        android:layout_below="@+id/ledTextView"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/vibratieTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vibratie: "
        android:textSize="18sp"
        android:layout_below="@+id/usaTextView"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/sunetTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunet: "
        android:textSize="18sp"
        android:layout_below="@+id/vibratieTextView"
        android:layout_marginTop="16dp" />


    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="110dp"
        android:text="Location" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button6"
        android:layout_below="@+id/sunetTextView"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="36dp"
        android:fontFamily="@font/allerta"
        android:gravity="center"
        android:text="Check the weather in your city"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:text="Home" />


</RelativeLayout>